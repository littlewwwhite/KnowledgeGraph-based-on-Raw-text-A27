# KnowledgeGraph Project Configuration
# Copy this file to .env and modify as needed

# ============== Path Configuration ==============
# Data directory (default: ./data)
# DATA_DIR=/path/to/data

# Raw text data file
# RAW_DATA_PATH=/path/to/raw_data.txt

# ============== Model Configuration ==============
# ChatGLM model path (local path or HuggingFace model name)
CHATGLM_MODEL_PATH=THUDM/chatglm-6b

# BERT model for tokenization and SPN4RE
BERT_MODEL_NAME=bert-base-chinese

# PaddleNLP UIE model
UIE_MODEL_NAME=uie-base

# ============== Training Configuration ==============
# Data split ratios
TRAIN_RATIO=0.5
VALID_RATIO=0.2

# Training parameters
MAX_EPOCH=10
BATCH_SIZE=8
MAX_SPAN_LENGTH=10
NUM_GENERATED_TRIPLES=15

# Knowledge graph iteration
MAX_ITERATION=10
EXTEND_RATIO_THRESHOLD=0.01

# ============== GPU Configuration ==============
# Comma-separated GPU IDs
CUDA_VISIBLE_DEVICES=0

# Default GPU for single-GPU operations
DEFAULT_GPU=0

# ============== Server Configuration ==============
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# IMPORTANT: Set a secure secret key in production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# Debug mode (set to false in production)
DEBUG=false

# ============== Schema Configuration ==============
# Schema version: v1, v2, v3, v4
SCHEMA_VERSION=v4
